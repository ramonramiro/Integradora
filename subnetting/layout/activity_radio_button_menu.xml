<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fondo_prin"
    tools:context="com.principal.subnetting.easy.main.RadioButtonMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Actividades de Subneteo"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="256dp"
        android:orientation="horizontal"
        android:textAlignment="center">

        <RadioButton
            android:id="@+id/bt_activity_one"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="Paso 1" />

        <RadioButton
            android:id="@+id/bt_activity_two"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Paso 2" />

        <RadioButton
            android:id="@+id/bt_activity_three"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Paso 3" />

        <RadioButton
            android:id="@+id/bt_activity_four"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="Paso4" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp">

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Explicaci贸n 1"
            android:textSize="7dp"
            android:onClick="btOpenDialogOne"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:onClick="openDialogTwo"
            android:text="Explicaci贸n 2"
            android:textSize="7dp" />

        <Button
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:text="Explicaci贸n 3"
            android:textSize="7dp"
            android:onClick="btOpenDialogThree"/>

        <Button
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="Explicaci贸n 4"
            android:textSize="7dp"
            android:textColor="#000"
            android:onClick="btOpenDialogFour"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp"
        android:text="Siguiente" />
</RelativeLayout>



