<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_fondo_prin"
    tools:context="com.principal.subnetting.easy.steps.PublicPrivateActivity"
    >

    <TextView
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tv_information_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribe si la dirección es pública o privada "/>

    <RelativeLayout
        android:layout_width="367dp"
        android:layout_height="486dp">

        <EditText
            android:id="@+id/tv_source_format_four2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="151dp"
            android:hint="Publica o privada"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edt_data_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="82dp"
            android:textColor="@color/colorPrimary">

        </EditText>

        <Button
            android:id="@+id/bt_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="178dp"
            android:background="#006064"
            android:text="Revisar" />

        <ImageView
            android:id="@+id/image_return_one"
            android:layout_width="118dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_boton_orig" />


    </RelativeLayout>

</LinearLayout>


