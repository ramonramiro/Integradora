<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_font_stips"
    android:orientation="vertical"

    tools:context="com.principal.subnetting.easy.steps.StepOneActivity"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/tv_source_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejercicio de clases de acuerdo a las direcciones"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/tv_source_format_four2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="151dp"
            android:hint="¿A qué clase pertenece ésta dirección?"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_data_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="82dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp">

        </EditText>

        <Button
            android:id="@+id/bt_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="225dp"
            android:background="#607d8b"
            android:text="Revisar"
            android:textColor="#ef6e00" />

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_boton_orig" />

    </RelativeLayout>

</LinearLayout>


