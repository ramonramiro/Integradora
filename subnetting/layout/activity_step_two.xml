<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_font_stips"
    tools:context="com.principal.subnetting.easy.steps.StepTwoActivity">


    <TextView
        android:id="@+id/tv_source_format_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:text="Encuentra los bits a utilizar para las subredes que necesitas "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_source_format_two2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_source_format_two"
        android:layout_weight="1"
        android:text="Es importante saber cuántos bits se manejaran durante el subneteo "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp" />


    <EditText
        android:id="@+id/tv_source_format_two3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="218dp"
        android:inputType="number"
        android:hint="Escribe cuántas subredes necesitas"
         />

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36dp"
        android:layout_marginTop="115dp" />


    <Button
        android:id="@+id/bt_submit_network"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="242dp"
        android:background="#607d8b"
        android:textColor="#ef6e00"
        android:text="Revisar" />


    <ImageView
        android:id="@+id/image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_boton_orig" />


</RelativeLayout>



